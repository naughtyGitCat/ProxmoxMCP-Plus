{
    "proxmox": {
        "host": "your-proxmox-host-ip",
        "port": 8006,
        "verify_ssl": false,
        "service": "PVE"
    },
    "auth": {
        "user": "username@pve",
        "token_name": "your-token-name",
        "token_value": "your-token-value"
    },
    "logging": {
        "level": "DEBUG",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "proxmox_mcp.log"
    },
    "mcp": {
      "host": "0.0.0.0",
      "port": 8000,
      "transport": "streamable"
    }
}
